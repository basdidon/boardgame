.text-field {
    flex-grow: 1;
    flex-direction: row;
    justify-content: center;
    padding-left: 0;
    padding-right: 0;
    padding-top: 0;
    padding-bottom: 0;
    font-size: 56px;
    -unity-text-align: middle-center;
    margin-bottom: 0;
}

.btn {
    flex-grow: 1;
    width: 60%;
    -unity-text-align: middle-center;
    font-size: 48px;
    padding-left: 0;
    padding-right: 0;
    -unity-font-style: bold;
    padding-top: 0;
    padding-bottom: 0;
}
